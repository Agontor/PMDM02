<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para CardView -->
    <style name="CardViewStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">#E99B9B</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Estilo texto -->
    <style name="CardTitleTextStyle">
        <item name="android:textColor">#141313</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo para boton -->
    <style name="botonStyle">
        <item name="android:colorBackground">#D52D2D</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    </resources>